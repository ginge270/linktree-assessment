
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" 
  url      = "file:./app.db"
}

model User {
  userId String @id
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  email String @unique
  accountType String 
}

model Link {
  linkId String @unique
  userId String @id
  linkType String

}

model LinkDetails {
    linkId String @id
    url String 
    linkTitle String
    description String
    linkType String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
}


model Authentication {
  userId String @id
  apiKey String @unique
}